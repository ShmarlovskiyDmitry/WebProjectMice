@model IEnumerable<MICE.Domain.Entities.News>

@{
    ViewBag.Title = "NewsList";
    Layout = "~/Views/Shared/_admin.cshtml";
}


<div>
    <h3 class="text-center">Все записи</h3>
    <p class="text-center">Список всех записей опубликованных администрацией сайта</p>
</div>


<div class="item">
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Заглавие
            </th>

            <th>
                Автор публикации
            </th>
            <th>
                Время публикации
            </th>
            <th>
                Дополнительно
            </th>
        </tr>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    <p>@p.Title</p>
                </td>

                <td>
                    @p.Author
                </td>
                <td>
                    @p.Time
                </td>
                <td>
                    <div class="funct_usr_list">

                            <button type="button" class="btn btn-default btn-sm">Просмотр</button>
                            <button type="button" class="btn btn-default btn-sm">Изменить</button>
                            <button type="button" class="btn btn-default btn-sm">Удалить</button>
                        
                    </div>
                </td>
            </tr>
        }
    </table>

</div>
